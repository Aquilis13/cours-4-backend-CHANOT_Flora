{% extends 'base.html.twig' %}

{% block title %}Hello PersonneController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ '/var/www/html/src/Controller/PersonneController.php'|file_link(0) }}">src/Controller/PersonneController.php</a></code></li>
        <li>Your template at <code><a href="{{ '/var/www/html/templates/personne/index.html.twig'|file_link(0) }}">templates/personne/index.html.twig</a></code></li>
    </ul>
</div>

<div class="example-wrapper" style="background-color: white !important; padding: 10px;">

    <b>Personne n° {{personne.id}} :</b><br />
    Nom : {{ personne.nom }}<br />
    Prénom : {{ personne.prenom }}<br />

    <br />
    <b>Liste des bâtiments de la personne n°{{personne.id}} :</b> <br />
    <ul>
        {% for batiment in personne.batiment %}
            <li> {{ batiment.nom }} </li>
        {% endfor %}
    </ul>
    </div>
{% endblock %}
